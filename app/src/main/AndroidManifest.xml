<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ufc.phdestination.ph_guide">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".View.Activities.BaseActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".View.Activities.TopDestinationsActivity"
            android:label="@string/top_destinations"
            android:parentActivityName=".View.Activities.BaseActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ufc.phdestination.ph_guide.View.Activities.BaseActivity" />
        </activity>


        <activity
            android:name=".View.Activities.DestinationDetailActivity"
            android:label="@string/destination_detail"
            android:launchMode="singleTask"
            android:parentActivityName=".View.Activities.TopDestinationsActivity"
            android:theme="@style/AppTheme.NoActionBarTransparent">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ufc.phdestination.ph_guide.View.Activities.TopDestinationsActivity" />
        </activity>

    </application>

</manifest>